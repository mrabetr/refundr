    <li>Permanent Address: <%= @user.address %></li>
    <li>Passport Number: <%= @user.passport_no %></li>
    <li>Issued by Government of <%= @user.passport_country %></li>
    <li>EU Arrival on: <%= @trip.arrival_date %></li>
    <li>EU Departure on: <%= @trip.departure_date %></li>
