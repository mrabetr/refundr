<div class="container my-3">
  <div class="row justify-content-center">
    <div class="col-xs-12 col-sm-6">
      <h2>Please upload receipt photo</h2>
      <%= simple_form_for([@trip, @receipt], url: create_photo_trip_receipts_path(@trip)) do |f| %>
        <%= f.input :photo, as: :file %>
        <%= f.submit class: "btn btn-warning button w-100" %>
      <% end %>
      <%= link_to 'Back to trip', trip_path(@trip) %>
    </div>
  </div>
</div>
