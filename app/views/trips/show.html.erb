<h1>Trip</h1>

<ul>
  <li><%= @trip.arrival_date %></li>
  <li><%= @trip.departure_date %></li>
  <li><%= @trip.final_destination %></li>
</ul>

<h3>Receipts</h3>
<ul>
  <% @receipts.each do |receipt| %>
  <li>Shop: <%= receipt.shop %></li>
  <li>Total: <%= humanized_money_with_symbol(receipt.total) %></li>
  <li>Total excl VAT: <%= humanized_money_with_symbol(receipt.total_excl_vat) %></li>
  <% end %>
</ul>
<%= link_to 'Add receipt', new_trip_receipt_path(@trip) %>
<br>
<%= link_to 'Edit', edit_trip_path %>
<br>
<%= link_to 'Delete', @trip, method: :delete, data: { confirm: 'Are you sure?' } %>
<br>
<%= link_to 'Back to trips', trips_path %>
