<%= simple_form_for(trip) do |f| %>
  <%= f.input :arrival_date, html5: true %>
  <%= f.input :departure_date, html5: true %>
  <%= f.input :country, as: :country, label: "EU country" %>
  <%= f.input :final_destination, as: :country %>
  <%= f.submit class: "btn btn-warning button w-100" %>
<% end %>
