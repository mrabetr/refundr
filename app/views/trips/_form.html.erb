<%= simple_form_for(trip) do |f| %>
  <%= f.input :arrival_date, html5: true %>
  <%= f.input :departure_date, html5: true %>
  <%= f.input :country, as: :country, label: "EU country", only: eu_countries, input_html: { class: 'select2' } %>
  <%= f.input :final_destination, as: :country, except: eu_countries, input_html: { class: 'select2' } %>
  <%= f.submit class: "btn btn-warning button w-100", id: "create-trip-placement" %>
<% end %>
